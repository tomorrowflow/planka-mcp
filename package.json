{
  "name": "planka-mcp",
  "version": "0.0.7",
  "description": "MCP server for Planka kanban board",
  "license": "MIT",
  "author": "Brad Risse",
  "homepage": "https://github.com/bradrisse/mcp-kanban",
  "bugs": "https://github.com/bradrisse/mcp-kanban/issues",
  "type": "module",
  "bin": {
    "mcp-server-kanban": "dist/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc && shx chmod +x dist/*.js",
    "watch": "tsc --watch",
    "up": "docker compose --env-file .env up -d",
    "down": "docker compose down",
    "restart": "docker compose --env-file .env restart",
    "build-docker": "npm run build && docker build -t planka-mcp:latest .",
    "start-node": "node dist/index.js",
    "start-http": "node dist/http-server.js",
    "inspector": "SERVER_PORT=3008 CLIENT_PORT=5174 npx -y @modelcontextprotocol/inspector node dist/index.js",
    "inspector:demo": "SERVER_PORT=3008 CLIENT_PORT=5174 npx -y @modelcontextprotocol/inspector -e PLANKA_BASE_URL=http://localhost:3000 -e PLANKA_ADMIN_ID=1460688047300412417 -e PLANKA_AGENT_EMAIL=claude-sic-score-front-end@cursor.com -e PLANKA_AGENT_PASSWORD=supersupersecre1 node dist/index.js",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js --testMatch='**/tests/**/*.test.ts'"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "1.6.1",
    "@types/node": "^22",
    "@types/node-fetch": "^2.6.12",
    "express": "^4.18.2",
    "node-fetch": "^3.3.2",
    "universal-user-agent": "^7.0.2",
    "zod": "^3.22.4",
    "zod-to-json-schema": "^3.23.5"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.14",
    "jest": "^29.7.0",
    "shx": "^0.3.4",
    "ts-jest": "^29.2.6",
    "typescript": "^5.6.2"
  }
}
